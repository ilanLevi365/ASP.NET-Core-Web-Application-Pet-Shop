@{
    ViewBag.Title = "ADMIN";
}
<div style="background-color:saddlebrown">
    <h1 id="Name_Page">ADMIN</h1>
    <div>
        <a id="Pages" asp-action="Index" asp-controller="Admin"><h3>Back</h3></a>
    </div>

    @{ int[] id = new int[3]; id[0] = 1; id[1] = 2; id[2] = 3;
        string[] categor_Name = new string[3]; categor_Name[0] = "Reptiles"; categor_Name[1] = "Poultry"; categor_Name[2] = "Marine";
        int Index_num = 0;
    }
    <form asp-controller="Admin" asp-action="Create" enctype="multipart/form-data">
        <div class="container">
            <div class="row">
                <div class="col">
                    <br />
                    <h2></h2>
                </div>
                <div style="background-color:aqua" align="left" class="col-auto">
                    <div class="form-group">
                        <br />
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <br />
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <br />
                        <label asp-for="Img_File" class="control-label"></label>
                        <input asp-for="Img_File" class="form-control" accept="image/*" />
                        <span asp-validation-for="Img_File" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <br />
                        <label asp-for="CategoryId" class="control-label"></label>
                        <br />
                        <h4>
                            <select onChange="this" asp-for="CategoryId">
                                @foreach (var itemcb in id)
                                {
                                    <option value="@itemcb"> @categor_Name[Index_num++]</option>
                                }
                            </select>
                        </h4>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <br />
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <br />
                        <input type="submit" value="Create" class="btn badge-primary" />
                    </div>
                </div>
                <div class="col">
                    <br />
                    <h2></h2>
                </div>

            </div>
        </div>
        }
    </form>
</div>
